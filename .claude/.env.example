# Claude Code Integration Environment Variables
# Copy this file to .env and fill in values as needed

# Anthropic API Key (optional - used as fallback when Claude Code limit reached)
# Leave blank to use Claude Code CLI only (recommended for free tier)
ANTHROPIC_API_KEY=

# Project Configuration
PROJECT_NAME=MKSAP
PROJECT_TYPE=medical-education

# Scraper Configuration
SCRAPER_TIMEOUT=300000
SCRAPER_HEADLESS=true
SCRAPER_DEBUG=false

# AI Configuration
AI_MODEL=claude-3-5-sonnet
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=4096

# Feature Flags
FEATURE_ERROR_DIAGNOSIS=true
FEATURE_AUTH_ASSISTANCE=true
FEATURE_PROGRESS_CHECKPOINTS=true
FEATURE_AI_VALIDATION=false

# Logging
LOG_LEVEL=info
LOG_FILE=scraper/logs/scraper.log

# Checkpoint Configuration
CHECKPOINT_ENABLED=true
CHECKPOINT_FREQUENCY=10
CHECKPOINT_DIR=scraper/output

# Cost Control (for API usage)
MAX_COST_PER_QUESTION=0.01
ALERT_ON_HIGH_COST=true

# Rate Limiting (for API usage)
REQUESTS_PER_MINUTE=50
BURST_SIZE=10
