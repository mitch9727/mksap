{
  "version": "1.0.0",
  "description": "Project organization rules for MKSAP codebase",
  "fileRules": {
    "documentation": {
      "patterns": ["**/*.md"],
      "exclude": ["node_modules/**", "scraper/src/**", ".git/**"],
      "locations": {
        "project": {
          "path": "docs/project/",
          "include": ["README.md", "QUICKSTART.md", "PROJECT_STATUS.md", "INDEX.md"]
        },
        "architecture": {
          "path": "docs/architecture/",
          "include": ["CODEBASE_GUIDE.md", "PROJECT_ORGANIZATION.md", "AI_INTEGRATION.md"]
        },
        "scraper": {
          "path": "docs/scraper/",
          "include": ["README.md", "TECHNICAL_SPEC.md", "AI_FEATURES.md", "CLAUDE_CODE_SETUP.md", "SELECTORS_REFERENCE.md", "SELECTOR_DISCOVERY.md"]
        },
        "specifications": {
          "path": "docs/specifications/",
          "include": ["MCQ_FORMAT.md"]
        },
        "examples": {
          "path": "docs/examples/",
          "include": ["*.md"]
        },
        "legacy": {
          "path": "docs/legacy/",
          "include": ["CLAUDE_MCQ_FORMAT.md"]
        }
      }
    },
    "claudeCommands": {
      "patterns": [".claude/commands/**/*.md"],
      "enforce": "strict",
      "rule": "All Claude commands must be in .claude/commands/ directory"
    },
    "claudeSkills": {
      "patterns": [".claude/skills/**/*"],
      "enforce": "strict",
      "rule": "All Claude skills must be in .claude/skills/ directory"
    },
    "claudeTemplates": {
      "patterns": [".claude/templates/**/*"],
      "enforce": "strict",
      "rule": "All templates must be in .claude/templates/ directory"
    },
    "implementationCode": {
      "skills": {
        "path": "scraper/src/skills/",
        "enforce": "strict",
        "rule": "Skills are tightly coupled to scraper code. Do not move to .claude/"
      },
      "agents": {
        "path": "scraper/src/agents/",
        "enforce": "strict",
        "rule": "Agents are tightly coupled to scraper code. Do not move to .claude/"
      }
    }
  },
  "namingConventions": {
    "documentation": {
      "pattern": "UPPERCASE_WITH_UNDERSCORES.md",
      "example": "PROJECT_STATUS.md"
    },
    "commands": {
      "pattern": "lowercase-with-hyphens.md",
      "example": "validate-structure.md"
    },
    "skills": {
      "pattern": "lowercase-with-hyphens",
      "example": "codebase-organizer"
    },
    "code": {
      "pattern": "camelCase.js",
      "example": "errorDiagnostician.js"
    }
  },
  "requiredFiles": [
    "docs/project/README.md",
    "docs/project/INDEX.md",
    "docs/project/QUICKSTART.md",
    "docs/project/PROJECT_STATUS.md",
    ".claude/README.md",
    ".claude/settings.local.json",
    ".claude/commands/README.md",
    ".claude/commands/validate-structure.md",
    ".claude/commands/organize-codebase.md",
    ".claude/commands/update-docs.md",
    ".claude/commands/sync-imports.md"
  ],
  "directories": {
    "docs": {
      "description": "All project documentation",
      "subdirs": {
        "project": "Project-level documentation",
        "architecture": "Architecture and design documentation",
        "scraper": "Scraper-specific documentation",
        "specifications": "Format and specification documentation",
        "examples": "Example files and samples",
        "legacy": "Archived or historical documentation"
      }
    },
    ".claude": {
      "description": "Claude Code integration and automation",
      "subdirs": {
        "commands": "Slash commands for project automation",
        "skills": "Claude Agent SDK skills for intelligent operations",
        "templates": "Templates for consistency and best practices"
      }
    },
    "scraper": {
      "description": "Autonomous MKSAP question scraper",
      "note": "Do not move src/skills/ or src/agents/ - tightly coupled to scraper"
    }
  },
  "validationRules": {
    "documentation": {
      "checkLinks": true,
      "checkFiles": true,
      "strictPaths": true
    },
    "imports": {
      "checkValidity": true,
      "checkCircular": true,
      "supportedStyles": ["ES6", "CommonJS"]
    },
    "configuration": {
      "requireJson": true,
      "validateSchema": true
    }
  }
}
